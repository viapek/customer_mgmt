<% @page_title = "Admin Login" %>

<section class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Login to viaEngish</h3>
  </div>
  <div class="panel-body">
  
  <%= form_tag(:action => 'attempt_login', :class => "form-horizontal") do %>
    <section class="row form-group">
      <label class="col col-xs-4 control-label" for="username">
        Name
      </label>
      <div class="col col-xs-4">
        <input type="text" name="username" id="username" autofocus placeholder="Username" required autocomplete="off" />        
      </div>
    </section>

    <section class="row form-group">
      <label class="col col-xs-4 control-label" for="password">
        Password
      </label>
      <div class="controls col col-xs-4">
        <input type="password" name="password" id="password" />
      </div>
    </section>
    <section class="row form-group">
      <div class="col col-xs-offset-4 col-xs-4">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </section>
  </div>    
    

  <% end %>
</article>