<% @page_title = "Payment" %>
<div class="panel panel-default">
  <div class="panel-heading">
      <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
      <%= @page_title %><%= !@viewForAllCustomers ? raw(' - ' + link_to(@customer.name, :controller => 'customers', :action => 'show', :id => @customer.id)) : '' %>

      <span class="btn-group pull-right">
        <%= link_to("Edit", {:action => 'edit', :customer_id => @payment.customer_id, :id => @payment.id}, :class => 'btn btn-warning btn-xs') %>
        <%= link_to("Delete", {:action => 'delete', :customer_id => @payment.customer_id, :id => @payment.id}, :class => 'btn btn-warning btn-xs') %>
      </span>
  </div>
  <%= render(:partial => 'show') %>
</div>
