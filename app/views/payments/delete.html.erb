<% @page_title = "Payment Delete" %>
<div class="panel panel-default">
    <div class="panel-heading">

        <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
        <%= @page_title %><%= !@viewForAllCustomers ? raw(' - ' + link_to(@customer.name, :controller => 'customers', :action => 'show', :id => @customer.id)) : '' %>
  
        <span class="btn-group pull-right">
          <%= link_to("Confirm Delete", {:action => 'destroy', :customer_id => @payment.customer.id, :id => @payment.id}, :class => 'btn btn-danger btn-xs') %>
        </span>

    </div>
    <div class="panel-body">
        <p id="predeletewarning">Are you sure that you wish to delete <b><em><%= @customer.name %>'s'</em></b> 
        payment of &#8361;<%= @payment.amount %> from 
        <%= @payment.date.strftime('%d %B, \'%y') %>?</p>
    </div>
</div>
