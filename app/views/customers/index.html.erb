<% @page_title = "Customers" %>

<div id="customers" class="panel panel-default">
  <div class="panel-heading">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
      <%= @page_title %>
      <span class="btn-group pull-right">
        <%= link_to("New", {:action => 'new'}, :class => 'btn btn-warning btn-xs') %>
      </span>

  </div><!-- panel heading -->
  
    <table class="table table-striped table-hover">
      <% @customers.each do |c| %>
        <tr>
          <th>&nbsp;<%= link_to(c.name, :action => 'show', :id => c.id) %></th>
        </tr>
      <% end %>
    </table>
    <div class="well-sm bg-info recordCount"><%= pluralize(@customers.size, 'customer') %> found</div>
</div>